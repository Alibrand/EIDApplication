<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/home_back"
    android:paddingHorizontal="20dp"
    >
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:visibility="invisible"
            android:layout_weight="1"
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left"
            >
            <ImageView
                android:src="@drawable/profile"
                android:layout_width="55dp"
                android:layout_height="55dp"
                />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="right">
            <ImageView
                android:src="@drawable/logout"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:tint="#504D4D" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"/>
        </LinearLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:text="Welcome Admin"
        android:textSize="25sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_decor_stores"
        android:layout_width="fill_parent"
        android:textColor="#5C5452"
        android:background="@drawable/home_button_back"
        android:lines="2"
        android:textSize="23sp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="30dp"
        android:text="Decor Stores"
        android:shadowColor="#9C8781"
        android:shadowDx="2"
        android:shadowDy="13"
        android:shadowRadius="8"
        android:textAllCaps="false"
        android:layout_margin="10dp"
         android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_decor_offers"
        android:layout_width="fill_parent"
        android:textColor="#5C5452"
        android:background="@drawable/home_button_back"
        android:lines="2"
        android:textSize="23sp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="30dp"
        android:text="Decor Offers"
        android:shadowColor="#9C8781"
        android:shadowDx="2"
        android:shadowDy="13"
        android:shadowRadius="8"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"/>














</androidx.appcompat.widget.LinearLayoutCompat>
