<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content">


<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/store_list_item"
    android:orientation="vertical"
    android:layout_width="160dp"
    android:layout_height="wrap_content">


<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="153dp"
    android:layout_height="142dp"
    card_view:contentPadding="8dp"
    card_view:cardCornerRadius="18dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="false"
    android:layout_marginVertical="5dp"
    card_view:cardBackgroundColor="@color/teal_700"
    android:layout_marginHorizontal="5dp"
    >
    <ImageView

        android:id="@+id/image_view_pic"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/text_view_store_name"
        android:gravity="center_horizontal"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Store Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>